#!/usr/bin/env node
var bale = require('../');
var pkg = require('../package.json');
var program = require('commander');

program
  .version(pkg.version)
  .usage('[options] entry-file [output-file.tar.gz]')
  .option('-c, --compress', 'compress')
  .option('-h, --hash', 'hash module names')
  .parse(process.argv);

bale(program.args[0], program, function(err, out) {
  if(err)
    return console.error("bale error: %s", err.stack || err);
  console.log(out);
});
